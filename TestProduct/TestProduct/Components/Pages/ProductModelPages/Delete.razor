@page "/productmodels/delete"
@using Microsoft.EntityFrameworkCore
@using TestProduct.Models
@inject IDbContextFactory<TestProduct.Data.MyDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>ProductModel</h2>
    <hr />
    @if (productmodel is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@productmodel.Name</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">@productmodel.Price</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@productmodel.Description</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">Category</dt>
            <dd class="col-sm-10">@productmodel.Category</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">StockQuantity</dt>
            <dd class="col-sm-10">@productmodel.StockQuantity</dd>
        </dl>
        <EditForm method="post" Model="productmodel" OnValidSubmit="DeleteProductModel" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(productmodel is null)">Delete</button> |
            <a href="/productmodels">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private ProductModel? productmodel;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        productmodel = await context.Products.FirstOrDefaultAsync(m => m.Id == Id);

        if (productmodel is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteProductModel()
    {
        using var context = DbFactory.CreateDbContext();
        context.Products.Remove(productmodel!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/productmodels");
    }
}
