@page "/productmodels/details"
@using Microsoft.EntityFrameworkCore
@using TestProduct.Models
@inject IDbContextFactory<TestProduct.Data.MyDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>ProductModel</h2>
    <hr />
    @if (productmodel is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@productmodel.Name</dd>
            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">@productmodel.Price</dd>
            <dt class="col-sm-2">Description</dt>
            <dd class="col-sm-10">@productmodel.Description</dd>
            <dt class="col-sm-2">Category</dt>
            <dd class="col-sm-10">@productmodel.Category</dd>
            <dt class="col-sm-2">StockQuantity</dt>
            <dd class="col-sm-10">@productmodel.StockQuantity</dd>
        </dl>
        <div>
            <a href="@($"/productmodels/edit?id={productmodel.Id}")">Edit</a> |
            <a href="@($"/productmodels")">Back to List</a>
        </div>
    }
</div>

@code {
    private ProductModel? productmodel;

    [SupplyParameterFromQuery]
    private int Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        productmodel = await context.Products.FirstOrDefaultAsync(m => m.Id == Id);

        if (productmodel is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
